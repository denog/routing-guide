root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{md,txt}]
indent_style = space
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[CNAME]
insert_final_newline = false
